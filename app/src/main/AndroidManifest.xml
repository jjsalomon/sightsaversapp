<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mark.sightsavers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragment.visionsimulator.Rules"
            android:label="@string/title_activity_rules" />
        <activity
            android:name=".fragment.visionsimulator.ShowTest1"
            android:label="@string/title_activity_test" />
        <activity android:name=".Diseases" />
        <activity android:name=".Trachoma" />
        <activity android:name=".RiverBlindness" />
        <activity android:name=".Cataract" />
        <activity android:name=".Glaucoma" />
        <activity android:name=".MyListActivity" />
        <activity
            android:name=".MakingDifference"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".YouTubeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fragment.visionsimulator.ShowTest2"
            android:label="@string/title_activity_show_test2" />
    </application>

</manifest>